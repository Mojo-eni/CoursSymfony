<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="../public/asset/icons/favicon.png">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('asset/app.css') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Electrolize&display=swap" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>

<div class="container">
    <header class="header">
        {% block header %}
            <div class="header-left"->
                <img class="bucket rotating" src="{{ asset('asset/icons/logo.svg') }}" alt="bucket">
                <div class="headerText">
                    <div class="headerTitle">
                        <div class="app-title"><h2>BucketList</h2></div>
                    </div>
                    <div class="headerNav">
                        <a class="navLink btn" href="{{ path('home') }}">Home</a>
                        <a class="navLink btn" href="{{ path('wish_list') }}">Wishes</a>
                        <a class="navLink btn" href="{{ path('aboutUs') }}">About Us</a>
                    </div>
                </div>
            </div>
            <div>
                {% if app.user %}
                    <a class="navLink btn log-out" href="{{ path('app_logout') }}">Log out</a>
                {% else %}
                    <a class="navLink btn log-out" href="{{ path('app_logout') }}">Log in</a>
                    <a class="navLink btn log-out" href="{{ path('app_register') }}">Register</a>
                {% endif %}
            </div>
        {% endblock %}
    </header>

    <main class="main">
        {% block main %}
            <div>
                <p>Bloc body</p>
            </div>
        {% endblock %}
    </main>

    <footer class="footer">
        {% block footer %}
            <div class="footerDiv">
                <p style="margin-bottom: 0">ENI Software Â©</p>
            </div>
        {% endblock %}
    </footer>
</div>
</body>
</html>
