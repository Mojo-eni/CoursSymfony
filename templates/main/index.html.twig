{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block main %}
    <div class="login-card">
        <h1>Login</h1>
        <form class="login-form">
            <div class="login-inputs">
                <div>
                    <label for="login">Login</label>
                    <input class="text-input blink" type="text" id="login" name="login">
                </div>
                <div>
                    <label for="mdp">Password</label>
                    <input class="text-input blink" type="text" id="mdp" name="mdp">
                </div>
            </div>
            <div>
                <input class="send btn" type="submit" value="Log in">
            </div>
        </form>
    </div>
    <div class="nyan-container">
            <img class="nyan" src="{{ asset('asset/icons/17xo.gif') }}">
    </div>

{% endblock %}
